{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2015",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "dom"
    ],
    "rootDir": "resources/assets/ts",
  },
  "include": [
    "resources/assets/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
